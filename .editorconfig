# EditorConfig помогает поддерживать согласованный стиль кодирования
# https://editorconfig.org

root = true

# Все файлы
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python файлы
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Markdown файлы
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# YAML файлы
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON файлы
[*.json]
indent_style = space
indent_size = 2

# Shell скрипты
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefile
[Makefile]
indent_style = tab
